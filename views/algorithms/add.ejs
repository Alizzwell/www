<!DOCTYPE html>
<html>

<head>
	<meta http-equiv="X-UA-Compatible" content="IE=11">

	<link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
	<link rel="stylesheet" href="/stylesheets/codemirror.css">
	<link rel="stylesheet" href="/stylesheets/style.css">
	
	<script src="/javascripts/jquery-2.2.4.min.js"></script>
    <script src="/javascripts/angular.min.js"></script>
	<script src="/javascripts/bootstrap.min.js"></script>

	<script src="/javascripts/codemirror/codemirror.js"></script>
	<script src="/javascripts/codemirror/mode/scheme.js"></script>
    <script src="/javascripts/codemirror/mode/javascript.js"></script>
    <script src="/javascripts/codemirror/mode/xml.js"></script>
    <script src="/javascripts/codemirror/mode/clike.js"></script>
    <script src="/javascripts/codemirror/addon/closebrackets.js"></script>
	<script src="/javascripts/codemirror/addon/active-line.js"></script>
	<script src="/javascripts/codemirror/addon/searchcursor.js"></script>
	<script src="/javascripts/codemirror/addon/mark-selection.js"></script>
	<script src="/javascripts/codemirror/addon/autorefresh.js"></script>

</head>

<body ng-app="algorithms.add" >
	<%- include /nav.ejs %>
	
	<div  id="body" class="container-fluid">
		<div class="wrapper" ng-controller="AddCtrl" ng-cloak>
		
			<div class="page-header">
				<label class="btn btn-primary" ng-click="btnHomeClk()">Home</label>
			</div>

			<div class="row">
				<div class="col-md-1">
					<h4>Category</h4>
				</div>
				
				<div class="col-md-11">
					<div class="dropdown">
						<button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
							{{category.label}}<span class="caret"></span>
						</button>
						<ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
							<li ng-repeat="a in categorys">
								<a ng-click="dropboxitemselected(a)">{{a.label}}</a>
							</li>
						</ul>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="col-md-1">
					<h4>Subject</h4>
				</div>
				
				<div class="col-md-11">
					<input type="text" ng-model="subject" class="form-control">
				</div>
			</div>

			<div class="row">
				<div class="col-md-1">
					<h4>Target</h4>
				</div>
				
				<div class="col-md-11">
					<input type="text" ng-model="target" class="form-control">
				</div>
			</div>

			<div class="row">
				<div class="col-md-1">
					<h4>Input</h4>
				</div>
				
				<div class="col-md-11">
					<textarea ng-model="input" class="form-control"></textarea>
				</div>
			</div>

			<div class="row">
				<div class="col-md-12">
					<h4>Source Code</h4>
					<div class="btn-group">
						<label class="btn btn-primary" ng-model="mode" uib-btn-radio="'text/x-csrc'">C</label>
						<label class="btn btn-primary" ng-model="mode" uib-btn-radio="'text/x-c++src'">C++</label>
						<label class="btn btn-primary" ng-model="mode" uib-btn-radio="'text/x-java'">Java</label>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<textarea ng-init="initInputEdit()" id="inputEdit" width="220px" height="200px"></textarea>
				</div>
			</div>

			<div class="row">
				<div class="col-md-12">
					<img ng-src="{{thumb}}" class="img-rounded" alt="Cinque Terre" width="240" height="160">
					<input type="file" ng-files="uploadThumbFile($files)"/>
				</div>
			</div>

			<div class="row" style="margin-top:50px; text-align:center;">
				<div class="col-md-12">
					<button type="button" class="btn btn-primary" ng-click=btnCreateClk()
						style="width:500px; height:50px;">Create</button>
				</div>
			</div>

		</div>
	</div>

	<script src="/javascripts/angular-animate.js"></script>
	<script src="/javascripts/ui-bootstrap-tpls-1.3.3.js"></script>
	<script src="/javascripts/codemirror/ui-codemirror.min.js"></script>
	<script src="/javascripts/modules/algorithms.category.js"></script>
	<script src="/javascripts/modules/algorithms.add.js"></script>

</body>

</html>